pipeline {
  environment {
    registry = "swaninho/node-web-app"
    registryCredential = 'docker-hub-credentials'
    dockerImage = ''
  }
  agent any
  tools {nodejs "NodeJs"}
  stages {
    stage('ITest') {
      steps {
        sh 'ls'
      }
    }
    stage('Install dependencies of the app') {
      steps {
        dir('express-authors-api') {
          sh 'npm install'
        }
      }
    }
    stage('Test the app') {
      steps {
        dir('express-authors-api') {
          sh 'npm run test'
        }
      }
    }   
  }
}